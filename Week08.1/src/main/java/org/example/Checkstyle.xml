<?xml version="1.0"?>
<!DOCTYPE module PUBLIC "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
        "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name="Checker">
    <!-- General settings -->
    <property name="severity" value="warning"/>
    <property name="charset" value="UTF-8"/>

    <!-- TreeWalker checks -->
    <module name="TreeWalker">
        <!-- Javadoc checks -->
        <module name="JavadocPackage"/>
        <module name="JavadocType"/>
        <module name="JavadocMethod"/>
        <module name="JavadocVariable"/>

        <!-- EmptyLineSeparator check -->
        <module name="EmptyLineSeparator">
            <property name="tokens" value="CLASS_DEF, METHOD_DEF, CTOR_DEF"/>
        </module>

        <!-- Naming conventions -->
        <module name="FileTabCharacter"/>
        <module name="NewlineAtEndOfFile"/>

        <!-- Google Java Style Guide checks -->
        <module name="com.puppycrawl.tools.checkstyle.checks.google.LineLength">
            <property name="max" value="100"/>
            <property name="ignorePattern" value="^package"/>
            <property name="ignorePattern" value="^import"/>
            <property name="ignorePattern" value="^/\*.*\*/$"/>
            <property name="ignorePattern" value="^/\*\*.*\*/$"/>
        </module>
        <module name="com.puppycrawl.tools.checkstyle.checks.google.PackageDeclaration"/>
        <module name="com.puppycrawl.tools.checkstyle.checks.google.RedundantThrows"/>
        <module name="com.puppycrawl.tools.checkstyle.checks.google.AvoidEscapedUnicodeCharacters"/>
        <module name="com.puppycrawl.tools.checkstyle.checks.google.AvoidFinalLocalVariable"/>
        <module name="com.puppycrawl.tools.checkstyle.checks.google.AvoidStaticImport"/>
        <module name="com.puppycrawl.tools.checkstyle.checks.google.FinalClass"/>
        <module name="com.puppycrawl.tools.checkstyle.checks.google.HideUtilityClassConstructor"/>
        <module name="com.puppycrawl.tools.checkstyle.checks.google.RedundantImport"/>
        <module name="com.puppycrawl.tools.checkstyle.checks.google.RedundantModifier"/>
        <module name="com.puppycrawl.tools.checkstyle.checks.google.RequireHashCodeMethod"/>
        <module name="com.puppycrawl.tools.checkstyle.checks.google.RequireOverrideAnnotation"/>
        <module name="com.puppycrawl.tools.checkstyle.checks.google.StaticVariableName"/>
        <module name="com.puppycrawl.tools.checkstyle.checks.google.VisibilityModifier">
            <property name="protectedAllowedForType" value="interface"/>
        </module>
    </module>
</module>
